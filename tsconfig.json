{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "noImplicitAny": true,
        "jsx": "react"
    },
    "exclude": [
        "node_modules",
        "build"
    ],
    "filesGlob": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "typings/**/*.ts",
        "entries/**/*.ts"
    ],
    "compileOnSave": false,
    "buildOnSave": false,
    "awesomeTypescriptLoaderOptions": {
       "useBabel": true,
       "useCache": true
    },
    "atom": {
        "rewriteTsconfig": false,
        "externalTranspiler": "babel"
    }
}
